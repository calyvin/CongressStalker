<% include header %>

    <div class="jumbotron">
        <h1>Now Showing at the Movie Hut!</h1>
        <p class="lead">Sit back, relax, and enjoy the show.</p>
    </div><!--div class="jumbotron"-->

    <div class="row">
		<% Object.keys(movies).forEach(function(key, i){ %>
			<div class="col-md-4">
			<img src='<%= movies[key].poster %>' width ="50%"></img>

			<h3><a href="/movies/<%= movies[key].id %>"> <%= movies[key].title %></a></h3>
			<h4>Now Playing:
			
			<% movies[key].showtimes.forEach(function(time){ %>
			<%= time %>  
			<% }) %>
			</h4>
		    

			<form action="/movies/<%= movies[key].id %>/edit" method="GET">
			<button>Update Movie</button>
			</form>
				
			<form action="/movies/<%= movies[key].id %>?_method=DELETE" method="POST">
			<button>Delete Movie</button>
			</form>
			</div><!--column-md-4--> 
		    <%if ((i+1)%3==0 && i!=0){ %>
		       </div> <!-- end the row div-->
               <div class="row">
            <% } %>

			<% }) %>
        </div> <!--last row -->
        <br>
		<h2> Want to add a new movie to the The Movie Hut?</h2>
		<form action="/movies" method="POST">
			<input type="text" name= "title" placeholder="Enter title to add...">
			<button>Search for Movie</button>
		</form>	

<% include footer %>
